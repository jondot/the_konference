---
scripts:
  - //cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js
  - //netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js
---



<div data-sticky-container>
  <div id="sticky" class="sticky" data-sticky data-options="anchor: page; marginTop: 0; stickyOn: small;">
    <div class="row">
      <nav class="top-bar" id="main-menu">
        <div class="top-bar-left">
          <img class="logo" src="<%= image_path 'logo.png' %>"/>
        </div>
        <div class="top-bar-right" style="overflow-y:scroll">
            <ul class="menu" data-magellan data-bar-offset="56" data-animation-duration="100" data-threshold="50">
              <% data.pages.each do |page| %>
                  <% 
                    title = page.keys[0]
                    subtext = page[title]
                  %>
                  <li><a href="#<%= title.to_url %>" title="<%= subtext %>"><%= title %></a></li>
              <% end %>

              <li class="social">
                <a href="http://twitter.com/<%= data.global.social.twitter %>">
                  <i class="fa fa-twitter"></i>
                </a>
              </li>
              <li>
                <a href="https://www.facebook.com/<%= data.global.social.facebook %>">
                  <i class="fa fa-facebook"></i>
                </a>
              </li>
              <li>
                <a href="mailto:<%= data.global.contact.mail %>?subject=<%= data.global.contact.title %> website">
                  <i class="fa fa-envelope"></i>
                </a>
              </li>
            </ul>
        </div>
      </nav>
    </div>
  </div>
</div>



<% data.pages.each do |page| %>
<%
  title = page.keys[0]
  subtext = page[title]
%>
<% 
    id = title.to_url 
%>
<div id="<%= id %>" class="container"  data-magellan-target="<%= id %>">
  <%= partial "partials/#{id}", locals: { id: id, subtext: subtext, title: title } %>
</div>
<% end %>

<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="small-12">
        Made with &lt;3 by <img class="logo" src="<%= image_path('logo.png') %>"/>
      </div>
    </div>
  </div>
</footer>


